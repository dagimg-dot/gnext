{
  "name": "gnext",
  "version": "0.1.0",
  "description": "An all-in-one CLI tool to create and develop GNOME Extensions",
  "type": "module",
  "bin": {
    "gnext": "./dist/cli.js"
  },
  "files": [
    "dist",
    "template"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm",
    "dev": "bun run build --watch",
    "prepublishOnly": "bun run build",
    "check": "biome check src --write"
  },
  "keywords": [
    "gnome",
    "gnome-shell",
    "extension",
    "cli",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10",
    "@biomejs/biome": "2.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

