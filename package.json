{
  "name": "@dagimg-dot/gnext",
  "version": "0.1.3",
  "description": "An all-in-one CLI tool to create and develop GNOME Extensions",
  "type": "module",
  "bin": {
    "gnext": "dist/cli.js"
  },
  "files": [
    "dist",
    "template"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node --format esm",
    "dev": "bun run build --watch",
    "prepublishOnly": "bun run build",
    "check": "biome check src --write",
    "publish": "bun publish --access public"
  },
  "keywords": [
    "gnome",
    "gnome-shell",
    "extension",
    "cli",
    "development",
    "typescript",
    "linux"
  ],
  "author": "GN'EXT Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dagimg-dot/gnext.git"
  },
  "homepage": "https://github.com/dagimg-dot/gnext#readme",
  "bugs": {
    "url": "https://github.com/dagimg-dot/gnext/issues"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
